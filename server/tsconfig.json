{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "../../../shared/*": ["../shared/*"]
    },
    "rootDirs": ["src", "../shared"]
  },
  "include": ["src", "../shared/types"]
}
